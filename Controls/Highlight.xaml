<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="FontRepo.Controls.Highlight"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:FontRepo.Controls">
    <ContentView.ControlTemplate>
        <ControlTemplate x:DataType="controls:Highlight">
            <Border BackgroundColor="{DynamicResource AccentColour}" HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="6" />
                </Border.StrokeShape>
                <Label
                    Margin="15"
                    FontSize="Small"
                    Text="{TemplateBinding Label}"
                    TextColor="{DynamicResource TextButtonColour}" />
            </Border>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>